{
  "compilerOptions": {
    "incremental": true,
    "target": "es5",
    // "module": "commonjs",
    "sourceMap": true,
    // "outFile": "./",
    "outDir": "./dist",
    "rootDir": "./src",
    // "noEmit": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true, 
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  }
}
